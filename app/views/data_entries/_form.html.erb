<%= form_with(model: data_entry, class: "my-4") do |form| %>
  <% if data_entry.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(data_entry.errors.count, "error") %> prohibited this data_entry from being saved:</h2>
      <ul>
        <% data_entry.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.hidden_field :agrovet_id, value: @agrovet.id %>
