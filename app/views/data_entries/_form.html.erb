  </div>

  <div class="mb-3">
    <%= form.label :product_3_quantity, @products.third.name, class: "form-label" %>
    <%= form.number_field :product_3_quantity, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :product_4_quantity, @products.fourth.name, class: "form-label" %>
    <%= form.number_field :product_4_quantity, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :money_paid, class: "form-label" %>
    <%= form.number_field :money_paid, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :money_owed, class: "form-label" %>
